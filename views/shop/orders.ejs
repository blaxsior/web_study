    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %> 
            <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li># <%= order.id %></li>
                        <ul>
                            <% order.Products.forEach(product => { %>
                                <li><%= product.title %> (<%= product.OrderItem.quantity %>)</li>
                            <% }); %> 
                        </ul>
                    <% }); %>  
                </ul>
            <% } %>  
        </main>
        <%- include('../includes/end.ejs') %>